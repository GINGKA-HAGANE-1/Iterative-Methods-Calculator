{
    "version": 2,
    "functions": {
        "api/**": {
            "excludeFiles": "{.next,*.cache,node_modules,public,api}/**"
        }
    },
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": { "pythonVersion": "3.9" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ]
}