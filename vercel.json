{  
    "version": 2,
    "functions": {
        "api/**": {
            "excludeFiles": "{.next,*.cache,node_modules,public,__pycache__,*.pyc,tests,docs}/**"
        }
    }
}
{  
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": { 
                "pythonVersion": "3.9",
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "functions": {
        "api/**": {
            "excludeFiles": "{.next,*.cache,node_modules,public,__pycache__,*.pyc,tests,docs}/**"
        }
    }
}