
{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": { 
                "pythonVersion": "3.9",
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "api/index.py",
                    "api/euler.py",
                    "requirements.txt"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/api/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ],
    "functions": {
        "api/index.py": {
            "memory": 1024,
            "maxDuration": 10,
            "excludeFiles": "{.next,*.cache,node_modules,public,__pycache__,*.pyc,tests,docs,*.md,*.txt,!requirements.txt}/**"
        }
    }
}

